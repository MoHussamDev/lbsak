extends ../../layout.pug

block content
        .content-header
            .container-fluid
                .row.mb-3.mt-3
                    .col-sm-6
                        h1.m-0.text-dark All Stores
                    .col-sm-6
                        a.btn.btn-success.float-right(href="/dashboard/stores/add")
                            i.fas.fa-plus
                            |  Add New Store
        .content
            .container-fluid
                .row
                    .col-12
                        .card
                            .card-header
                                h3.card-title All Stores
                            .card-body.table-responsive.p-0
                                table.table.table-hover.text-nowrap
                                    thead
                                        tr
                                     
                                        th Store Name
                                        th Status
                                        th Edit
                                        th Delete
                                    tbody
                                     if stores
                                         for store in stores.docs
                                                tr
                                                td #{ store.storeEnglish }
                                                td
                                                    span.tag.tag-success Active
                                                td
                                                    a.btn-sm.btn-primary(href=`/dashboard/users/edit/${store.id}`)
                                                        i.far.fa-edit
                                                        |  Edit
                                                td
                                                    form(action=`/dashboard/users/delete/${store.id}`, method="post")
                                                        input(type="hidden" name="_csrf" value=`${csrfToken}`)
                                                        button.btn-sm.btn-danger(type="submit")
                                                            i.fas.fa-trash-alt